{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": [
    "react", "mocha"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-unreachable": "error",
    "no-debugger": "warn",
    "eqeqeq": "warn",
    "react/react-in-jsx-scope": "error",
    "react/jsx-filename-extension": "off",
    "mocha/no-exclusive-tests": "error"
  }
}
